= form_for @event do |f|
  -if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description

  = f.fields_for :options do |fo|
    .field
      = fo.label :datetime, "Date"
      = fo.datetime_select :datetime

  .actions
    = f.submit 'Save'
